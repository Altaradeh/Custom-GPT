{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Portfolio management and file upload tool with weight normalization",
  "author": "Custom GPT Project",
  "license": "MIT",
  "tools": [
    {
      "name": "handle_portfolio_upload",
      "description": "Process portfolio files (CSV/XLSX) with automatic weight normalization and validation",
      "inputSchema": {
        "$ref": "../schemas/portfolio.schema.json"
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "array",
            "description": "Normalized portfolio holdings",
            "items": {
              "type": "object",
              "properties": {
                "ticker": {
                  "type": "string",
                  "description": "Stock ticker symbol"
                },
                "weight": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Normalized weight (sum of all weights = 1.0)"
                }
              },
              "required": ["ticker", "weight"]
            }
          },
          "normalized": {
            "type": "boolean",
            "description": "Whether weights were normalized"
          },
          "total_holdings": {
            "type": "integer",
            "description": "Number of holdings in portfolio"
          }
        },
        "required": ["rows", "normalized"]
      }
    }
  ],
  "resources": [
    {
      "uri": "file://data/uploads/",
      "name": "upload_directory",
      "description": "Directory for uploaded portfolio files"
    },
    {
      "uri": "file://schemas/portfolio.schema.json",
      "name": "portfolio_schema",
      "description": "JSON schema for portfolio data validation"
    }
  ]
}
