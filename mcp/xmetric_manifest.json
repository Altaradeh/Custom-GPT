{
  "name": "xmetric",
  "version": "1.0.0",
  "description": "XMetric tool for primary time-series analysis with aggregation and scaling",
  "author": "Custom GPT Project",
  "license": "MIT",
  "tools": [
    {
      "name": "handle_xmetric",
      "description": "Process time series data from CSV/Parquet files with configurable aggregation and scaling",
      "inputSchema": {
        "$ref": "../schemas/xmetric.schema.json"
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "series": {
            "type": "array",
            "description": "Time series data points",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date in YYYY-MM-DD format"
                },
                "value": {
                  "type": "number",
                  "description": "Processed numeric value"
                }
              },
              "required": ["date", "value"]
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "mean": {
                "type": "number",
                "description": "Mean of all values"
              },
              "count": {
                "type": "integer",
                "description": "Number of data points"
              }
            },
            "required": ["mean", "count"]
          }
        },
        "required": ["series", "summary"]
      }
    }
  ],
  "resources": [
    {
      "uri": "file://data/",
      "name": "data_directory",
      "description": "Directory containing CSV and Parquet files for analysis"
    }
  ]
}
