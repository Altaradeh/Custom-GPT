{
  "name": "ymetric",
  "version": "1.0.0",
  "description": "YMetric tool for secondary metrics and cross-sectional analysis",
  "author": "Custom GPT Project",
  "license": "MIT",
  "tools": [
    {
      "name": "handle_ymetric",
      "description": "Process secondary metrics for comparative analysis, similar to XMetric but optimized for cross-sectional comparisons",
      "inputSchema": {
        "$ref": "../schemas/ymetric.schema.json"
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "series": {
            "type": "array",
            "description": "Time series data points for YMetric analysis",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date in YYYY-MM-DD format"
                },
                "value": {
                  "type": "number",
                  "description": "Processed YMetric value"
                }
              },
              "required": ["date", "value"]
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "mean": {
                "type": "number",
                "description": "Mean of YMetric values"
              },
              "count": {
                "type": "integer",
                "description": "Number of data points"
              }
            },
            "required": ["mean", "count"]
          }
        },
        "required": ["series", "summary"]
      }
    }
  ],
  "resources": [
    {
      "uri": "file://data/",
      "name": "data_directory",
      "description": "Directory containing data files for YMetric analysis"
    }
  ]
}
