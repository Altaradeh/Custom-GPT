# Environment Configuration for Long-Term Financial Market Simulation API
# Copy this to .env for local development

# Application Settings
ENV=development
LOG_LEVEL=info
API_TITLE="Long-Term Financial Market Simulation API"
API_VERSION="1.0.0"

# Server Settings  
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Data Settings
DATA_DIR="Long Term Model/Long Term Model"
LIBRARY_FILE="final_path_statistics_library.csv"
PARAM_FILE="param_library.csv"

# Performance Settings
MAX_PATH_DETAILS=50
CACHE_SIZE=128

# Logging Settings
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE="api.log"

# Security Settings (for production)
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings (if needed in future)
# DATABASE_URL=sqlite:///./financial_data.db

# Monitoring Settings (if needed)
# SENTRY_DSN=your-sentry-dsn-here
# PROMETHEUS_ENABLED=false
